<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/white">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/custom_edittext"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Note"
                android:id="@+id/title"
                android:textSize="36dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/purple"/>
    <EditText
        android:id="@+id/titleEt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:textColorHighlight="@color/cardview_dark_background"

        android:hint="title"
        android:inputType="text"
      />

    <EditText
        android:id="@+id/contentEt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:textColorHighlight="@color/cardview_dark_background"

        android:hint="content"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/creationDateEt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:textColorHighlight="@color/cardview_dark_background"

        android:hint="creationDate"
        android:inputType="text"
         />

    <EditText
        android:id="@+id/lastModifiedDateEt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        android:textColorHighlight="@color/cardview_dark_background"

        android:hint="lastModifiedDate"
        android:inputType="text"
        />


    <EditText
        android:id="@+id/statusEt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:textColorHighlight="@color/cardview_dark_background"

        android:background="@drawable/custom_edittext"

        android:padding="8dp"
        android:hint="status"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/projectIdEt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:textColorHighlight="@color/cardview_dark_background"

        android:padding="8dp"
        android:layout_marginTop="10dp"

        android:hint="projectId"
        android:inputType="text"
       />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="save"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/noteRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbarSize="8dp"
        android:fadeScrollbars="true"
        android:requiresFadingEdge="vertical"
        android:fadingEdgeLength="8dp"
        />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>